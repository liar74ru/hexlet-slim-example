<div class="form-box">
  <form action="<?= $router->urlFor('users.update', ['id' => $user['id']]) ?>" method="post" style="margin-bottom: 0;">
    <input type="hidden" name="_METHOD" value="PATCH">
    <label>
      NickName:
      <input type="text" name="user[name]" value="<?= htmlspecialchars($user['name']) ?>">
