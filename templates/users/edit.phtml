        <div class="error"><?= $errors['email'] ?></div>
      <?php endif ?>
    </label>
    <div class="btn-row">
      <input type="submit" value="Update" class="btn">
      </form>
      <form action="<?= $router->urlFor('users.delete', ['id' => $user['id']]) ?>" method="post" style="display:inline;">
